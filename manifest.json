{
  "manifest_version": 3,
  "name": "Facebook Post Extractor",
  "version": "1.0.0",
  "description": "Extract posts from Facebook profiles",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://www.facebook.com/*",
    "https://*.facebook.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Extract Facebook Posts"
  },
  "content_scripts": [
    {
      "matches": ["https://*.facebook.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["injected.js"],
      "matches": ["https://*.facebook.com/*"]
    }
  ]
}
